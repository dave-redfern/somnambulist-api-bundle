<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter id="somnambulist.api_bundle.request.per_page">20</parameter>
        <parameter id="somnambulist.api_bundle.request.max_per_page">20</parameter>
        <parameter id="somnambulist.api_bundle.request.limit">100</parameter>
    </parameters>

    <services>
        <defaults public="false" autowire="true" autoconfigure="true"/>

        <!-- Kernel Subscribers -->
        <service id="Somnambulist\ApiBundle\Subscribers\ConvertExceptionToJSONResponseSubscriber" class="Somnambulist\ApiBundle\Subscribers\ConvertExceptionToJSONResponseSubscriber">
            <argument type="service" id="Somnambulist\ApiBundle\Services\ExceptionConverter" />
            <call method="setLogger">
                <argument type="service" id="logger" on-invalid="ignore" />
            </call>
            <tag name="kernel.subscriber" />
        </service>
        <service id="Somnambulist\ApiBundle\Subscribers\ConvertJSONToPOSTRequestSubscriber" class="Somnambulist\ApiBundle\Subscribers\ConvertJSONToPOSTRequestSubscriber">
            <tag name="kernel.subscriber" />
        </service>

        <!-- Services -->
        <service id="Somnambulist\ApiBundle\Services\Request\RequestArgumentHelper" class="Somnambulist\ApiBundle\Services\Request\RequestArgumentHelper" public="true">
            <argument>%somnambulist.api_bundle.request.per_page%</argument>
            <argument>%somnambulist.api_bundle.request.max_per_page%</argument>
            <argument>%somnambulist.api_bundle.request.limit%</argument>
        </service>

        <service id="Somnambulist\ApiBundle\Services\Response\ResponseFactory" class="Somnambulist\ApiBundle\Services\Response\ResponseFactory" public="true">
            <argument type="service" id="sam_j_fractal.manager" />
            <argument type="service" id="debug.stopwatch" on-invalid="ignore" />

            <call method="setSerializer">
                <argument type="service" id="Somnambulist\ApiBundle\Services\Transformer\Serializers\ArraySerializer" />
            </call>
        </service>

        <service id="Somnambulist\ApiBundle\Services\ExceptionConverter" class="Somnambulist\ApiBundle\Services\ExceptionConverter">
            <argument type="tagged_locator" tag="somnambulist.api_bundle.exception_converter" />
        </service>

        <prototype namespace="Somnambulist\ApiBundle\Services\Converters\" resource="../../Services/Converters/">
            <tag name="somnambulist.api_bundle.exception_converter" />
        </prototype>

        <!-- this needs to be public to work with fractal as it's not a dependency on the controller -->
        <service id="Somnambulist\ApiBundle\Services\Transformer\PassThroughTransformer" class="Somnambulist\ApiBundle\Services\Transformer\PassThroughTransformer" public="true"/>

        <service id="Somnambulist\ApiBundle\Services\Transformer\Serializers\ArraySerializer" class="Somnambulist\ApiBundle\Services\Transformer\Serializers\ArraySerializer" />
    </services>

</container>
