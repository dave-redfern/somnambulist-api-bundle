{
    "name": "somnambulist/api-bundle",
    "type": "symfony-bundle",
    "description": "Adds infrastructure for creating an API with documentation, response handling, and more.",
    "keywords": [
        "api",
        "fractal",
        "json",
        "bundle",
        "symfony"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dave Redfern",
            "email": "info@somnambulist.tech"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "psr/log": "^1.0.1",
        "somnambulist/form-request-bundle": "^1.0|^2.0",
        "somnambulist/fractal-bundle": "^1.0",
        "symfony/framework-bundle": "^5.3|^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.5",
        "doctrine/collections": "~1.6",
        "pagerfanta/pagerfanta": "^3.5",
        "somnambulist/domain": "^4.3",
        "somnambulist/read-models": "^3.1",
        "symfony/browser-kit": "^5.4",
        "symfony/phpunit-bridge": "^5.4",
        "symfony/messenger": "^5.4",
        "symfony/monolog-bundle": "~3.5",
        "symfony/serializer": "^5.4",
        "symfony/stopwatch": "^5.4",
        "symfony/twig-bundle": "^5.4",
        "symfony/var-dumper": "^5.4",
        "symfony/yaml": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "Somnambulist\\Bundles\\ApiBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Somnambulist\\Bundles\\ApiBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "suggest": {
        "pagerfanta/pagerfanta": "Pagination support expects Pagerfanta collections",
        "symfony/stopwatch": "Add profiling data from using fractal",
        "symfony/twig-bundle": "Required to use OpenAPI documentation generator"
    }
}
