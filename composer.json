{
    "name": "somnambulist/api-bundle",
    "type": "symfony-bundle",
    "description": "Adds infrastructure for creating an API with documentation, response handling, and more.",
    "keywords": [
        "api",
        "fractal",
        "json",
        "bundle",
        "symfony"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dave Redfern",
            "email": "info@somnambulist.tech"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "psr/log": "^1|^2|^3",
        "somnambulist/form-request-bundle": "^2.0",
        "somnambulist/fractal-bundle": "^2.0",
        "symfony/framework-bundle": "^6.4|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "doctrine/collections": "~1.8",
        "pagerfanta/pagerfanta": "^3.8",
        "monolog/monolog": "^3.4",
        "somnambulist/api-client": "^4.0.0",
        "somnambulist/domain": "^6.0.0",
        "somnambulist/read-models": "^4.0",
        "symfony/browser-kit": "^6.4",
        "symfony/phpunit-bridge": "^6.4",
        "symfony/messenger": "^6.4",
        "symfony/monolog-bundle": "~3.5",
        "symfony/serializer": "^6.4",
        "symfony/stopwatch": "^6.4",
        "symfony/twig-bundle": "^6.4",
        "symfony/var-dumper": "^6.4",
        "symfony/yaml": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Somnambulist\\Bundles\\ApiBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Somnambulist\\Bundles\\ApiBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "suggest": {
        "pagerfanta/pagerfanta": "Pagination support expects Pagerfanta collections",
        "symfony/stopwatch": "Add profiling data from using fractal",
        "symfony/twig-bundle": "Required to use OpenAPI documentation generator"
    }
}
